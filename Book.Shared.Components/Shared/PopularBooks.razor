<div class="right-box">
  <h3 class="m-0 text-center py-3 bg-white alert-heading">Sách Bán Chạy</h3>
  <div class="popular-books-list">
    @foreach (var b in PopularBooksList)
    {
      <div class="popular-books-item">
        <a href="/book/@b.Id" title="@b.Name">
          <img src="@b.Image" alt="@b.Name" class="me-3" />
        </a>

        <div class="d-flex flex-column justify-content-center">
          <a href="/book/@b.Id" title="@b.Name" class="book-title">
            @b.Name
          </a>
          <a href="/authors/@b.Author.Slug/books" title="Được sáng tác bởi @b.Author.Name">
            @b.Author.Name
          </a>
        </div>
      </div>
    }
  </div>
</div>

@code {
  [Parameter, EditorRequired]
  public BookListDTO[] PopularBooksList { get; set; } = [];
  private BookListDTO[] _popularBooks = [];
}
